<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD App</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Data Entries</h1>
      <a href="/add" class="btn">Add New</a>

      <table>
        <thead>
          <tr>
            <th>Value 1</th>
            <th>Value 2</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(item => { %>
          <tr>
            <td><%= item.value1 %></td>
            <td><%= item.value2 %></td>
            <td>
              <a href="/edit/<%= item._id %>" class="btn edit">Edit</a>
              <a href="/delete/<%= item._id %>" class="btn delete">Delete</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>